# Copy this file to `.env` for local development only.
# Never commit real secrets. In CI/CD, set these as GitHub Secrets.

# Primary LLM provider (recommended)
OPENROUTER_API_KEY=

# Optional: Use OpenAI directly instead of OpenRouter
OPENAI_API_KEY=

# Tavily Search API Key
TAVILY_API_KEY=

# Model configuration (optional overrides)
MODEL_NAME=gpt-4o-mini
TEMPERATURE=0.2

# Google Sheets (for research history)
# Provide the full service account JSON as a single env var string
GOOGLE_SERVICE_ACCOUNT_JSON=
# Target spreadsheet and worksheet
GSPREAD_SHEET_ID=
GSPREAD_WORKSHEET=history

# Logging
LOG_DIR=/var/log/ai-agents
LOG_LEVEL=INFO
LOG_ROTATION_WHEN=midnight
LOG_ROTATION_BACKUP_COUNT=7
